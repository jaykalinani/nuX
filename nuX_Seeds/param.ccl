#} "step"

CCTK_REAL kerr_beam_position "Position at which the ray is injected"
{
    * :: "Any real number"
} 3.25

CCTK_REAL kerr_beam_width "Width of the beam used for the kerr test"
{
    (0:*) :: "Any positive number"
} 0.5

CCTK_REAL kerr_mask_radius "Excision radius for the Kerr Schild test"
{
    0:* :: "Any non-negative number"
} 2.0


# parameters for setting initializing atmosphere as initial data

CCTK_REAL rho_atmosphere "floor density in the atmosphere"
{
  (0.0:*   :: "Positive"
} 1e-9

CCTK_REAL press_atmosphere "floor pressure in the atmosphere"
{
  (0.0:*   :: "Positive"
} 1e-18

BOOLEAN verbose "Debug output" STEERABLE=always
{
} "no"

