# Parameter definitions for thorn AsterSeeds

KEYWORD test_type "Type of test to set up" STEERABLE=never
{
  "None"   :: "Initial data should be written by another thorn"
  "1DTest" :: ""
  "2DTest" :: ""
  "3DTest" :: "" 
  "Atmosphere" :: "Atmosphere" 
} "1DTest"

###############################################################################
# Tests
###############################################################################
KEYWORD nuX_test_case "Perform simple tests"
{
    "beam"       :: "Evolve a single beam propagating through the grid"
    "adv_velocity_jump"   :: "Advective across a velocity jump"
    "diff_limit_square":: "Square pulse diffusion test"
    "diff_limit_gaussian" :: "Gaussian packet diffusion test"
    "equil"      :: "Thermal equilibrium test"
    "kerrschild" :: "Radiation beam in Kerr geometry"
    "none"       :: "No test is performed (production mode)"
    "shadow"     :: "Sphere shadow test"
    "sphere"     :: "Homogeneous sphere test"
} "none"

CCTK_REAL static_rho "Initial rest mass density"
{
    (0:) :: "Any positive number"
} 1.0

CCTK_REAL static_velx "Add a constant velocity in the initial data: x-component"
{
    (-1:1) :: "Any number that makes sense"
} 0.0

CCTK_REAL static_vely "Add a constant velocity in the initial data: x-component"
{
    (-1:1) :: "Any number that makes sense"
} 0.0

CCTK_REAL static_velz "Add a constant velocity in the initial data: x-component"
{
    (-1:1) :: "Any number that makes sense"
} 0.0

CCTK_REAL static_eps "Initial specific internal energy"
{
    (0:) :: "Any positive number"
} 1.0e-2

CCTK_REAL static_ye "Initial electron fraction"
{
    [0:1] :: "Any number between 0 and 1"
} 0.5

CCTK_REAL test_nvec[3] "Direction of propagation for the initial packet"
{
    * :: "The direction vector will be normalized; defaults to x-direction"
} 0.0

CCTK_REAL beam_position "Offset with respect to the plane with normal beam_test_dir passing through the origin"
{
    * :: "Any real number"
} 0.0

CCTK_REAL beam_width "Width of the beam"
{
    (0:* :: "Any positive number"
} 1.0

CCTK_REAL equil_nudens_0[3] "Comoving neutrino number densities"
{
    0:* :: "Any non negative number"
} 0.0

CCTK_REAL equil_nudens_1[3] "Comoving neutrino energy densities"
{
    0:* :: "Any non negative number"
} 0.0

#KEYWORD diff_profile "Diffusion profile"
#{
